/**
 * Default HTTP client implementation using Apache HttpComponents.
 */
public class ApacheHttpClient implements HttpClient, Closeable {
    private final CloseableHttpClient httpClient;
    private final ObjectMapper objectMapper;
    private final String baseUrl;

    public ApacheHttpClient(String baseUrl) {
        this.httpClient = HttpClients.createDefault();
        this.objectMapper = new ObjectMapper();
        this.baseUrl = baseUrl;
    }

    public ApacheHttpClient(String baseUrl, CloseableHttpClient httpClient) {
        this.httpClient = httpClient;
        this.objectMapper = new ObjectMapper();
        this.baseUrl = baseUrl;
    }

    @Override
    public <T> T doPost(String url, Object body, Map<String, String> headers, Class<T> responseType) throws Exception {
        HttpPost request = new HttpPost(baseUrl + url);
        request.setHeader("Content-Type", "application/json");
        if (headers != null) {
            headers.forEach(request::setHeader);
        }
        if (body != null) {
            request.setEntity(new StringEntity(objectMapper.writeValueAsString(body), StandardCharsets.UTF_8));
        }
        try (CloseableHttpResponse response = httpClient.execute(request)) {
            String json = EntityUtils.toString(response.getEntity(), StandardCharsets.UTF_8);
            return objectMapper.readValue(json, responseType);
        }
    }

    @Override
    public <T> T doGet(String url, Map<String, String> headers, Class<T> responseType) throws Exception {
        HttpGet request = new HttpGet(baseUrl + url);
        if (headers != null) {
            headers.forEach(request::setHeader);
        }
        try (CloseableHttpResponse response = httpClient.execute(request)) {
            String json = EntityUtils.toString(response.getEntity(), StandardCharsets.UTF_8);
            return objectMapper.readValue(json, responseType);
        }
    }

    @Override
    public <T> T doPut(String url, Object body, Map<String, String> headers, Class<T> responseType) throws Exception {
        HttpPut request = new HttpPut(baseUrl + url);
        request.setHeader("Content-Type", "application/json");
        if (headers != null) {
            headers.forEach(request::setHeader);
        }
        if (body != null) {
            request.setEntity(new StringEntity(objectMapper.writeValueAsString(body), StandardCharsets.UTF_8));
